    <!-- ======= Menu Section ======= -->
    <section id="menu" class="menu section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Menu</h2>
                <p>Check Our Tasty Menu</p>
            </div>
        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var menuItem in Model)
            {
                <div class="col-lg-6 menu-item @($"filter-{menuItem.Category.ToLower()}")">
                    <img src="@menuItem.ImageUrl" class="menu-img" alt="">
                    <div class="menu-content">
                        <a asp-controller="Menus" asp-action="Details" asp-route-id="@menuItem.Id">@menuItem.Name</a>

                <span>@($"${menuItem.Price:0.00}")</span>
                    </div>
                    <div class="menu-ingredients">
                        @menuItem.Ingredients
                    </div>
                    @if (menuItem.Quantity <= 0)
                    {
                        <div>Out of Stock</div>
                    }
                    else
                    {
                        <form asp-controller="Home" asp-action="AddToCart" method="post">
                            <input type="hidden" name="ItemID" value="@menuItem.Id" /> <!-- Set value to StockID from menu -->
                            <button type="submit">Add to Basket</button>
                        </form>
                    }


                </div>

            }
        </div>

        </div>
    </section><!-- End Menu Section -->
